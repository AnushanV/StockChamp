doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='icon' href='../public/images/icon.png' type='image/x-icon')
  title Sign Up
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.3/css/bulma.min.css')
  meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0')
  link(rel='stylesheet' href='../public/style/main.css')
section.hero.is-fullheight.is-medium.is-primary
  .hero-body
    .container
      .columns.is-centered
        article.card.is-rounded
          .card-content
            h1.title
              img.logo(src='../public/images/logo.png')
            p.control.has-icon
              i.fa.fa-user
              input.input(type='email' placeholder='Username')
            p.control.has-icon
              i.fa.fa-lock
              input.input(type='password' placeholder='Password')
            p.has-text-centered
              a(href='/login')  Already have an account? Log in now !
            p.control
              button.button.is-primary.is-medium.is-fullwidth
                i.fa.fa-sign-in
                |                     Sign Up
